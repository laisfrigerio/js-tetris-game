{
  "name": "js-tetris-game",
  "version": "1.0.0",
  "description": "JS + Canvas Tetris Game",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint src --color",
    "deploy": "gh-pages -d src"
  },
  "engines": {
    "node": ">=0.12.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/laisfrigerio/js-tetris-game.git"
  },
  "keywords": [
    "app",
    "js",
    "canvas",
    "tetris",
    "game",
    "desktop",
    "electron"
  ],
  "author": "Lais Frig√©rio da Silva",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/laisfrigerio/js-tetris-game/issues"
  },
  "homepage": "https://github.com/laisfrigerio/js-tetris-game#readme",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "npm"
      },
      "electronWinstallerConfig": {
        "name": "tetris_game_desktop_app"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "windowsStoreConfig": {
        "packageName": "",
        "name": "tetrisgamedesktopapp"
      }
    }
