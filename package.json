  },
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "electron-forge": "^5.2.4",
    "electron-prebuilt-compile": "4.0.0",
    "gulp": "^4.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-csso": "^3.0.1",
    "gulp-sass": "^4.0.2",
    "gulp-uglify": "^3.0.1"
  }
